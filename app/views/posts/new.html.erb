<div class="row">
  <h1>New Post</h1>
</div>

<%= form_with model: @post do |form| %>
   <div class="row">
    <h5>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </h5>
  </div>
  <div class="row">
    <h5>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </h5>
  </div>
  <div class="row">
    <h5>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </h5>
  </div>
  <div class="row">
    <h5>
      <%= form.label "image", class: "form-label" %>
      <%= form.file_field "image", accept: "image/png,image/jpg,image/jpeg", class: "form-control" %>
  </h5>
  </div>
  <div class="row">
    <h5>
    <%= form.submit "Add A New Post", class: "btn btn-primary" %>
  </h5>
  </div>
  <%= form.hidden_field "place_id" %>

<% end %>
