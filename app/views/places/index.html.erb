
<% if @current_user %>
<div class="row">
  <h1>Places</h1>
</div>

<div class="row">
  <h5>
     <a class="btn btn-outline-primary" href="/places/new"" role="button">New Place</a>
  </h5>
</div>


  <% for place in @places %>
    <div class="row">
      <h5>
      <a href="/places/<%= place.id %>"><%= place.name %></a>
      </h5>
    </div>
  <% end %>

<% else %> <%# no need as I add if @current_user in place controller %>
<div class="row">
    <h5>
     Dear Customer, You must first <a href="/sessions/new">login</a> to continue.
    </h5>
</div>
<% end %>