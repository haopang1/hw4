<h1><%= @place.name %></h1>

<h2><%= @current_user.username%>'s Posts</h2>

  <% for post in @place.posts %>
    <% if @current_user.id ==post.user_id %> 
        <h3><%= post.title %></h3>
        <h4><%= post.posted_on %></h4>
        <% if post.image.attached? %>
            <img src="<%= url_for(post.image) %>" class="img-fluid">
        <%# else ---- consider if I still need image column or only upload from local-----%>
        <% end %>

        <p><%= post.description %></p>
    <% end %>
  <% end %>
  
  <p>
      <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
  </p>

  <p>
      <a href="/places">Back to All Places</a>
  </p>
